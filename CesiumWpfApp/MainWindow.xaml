<Window x:Class="CesiumWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Cesium WPF" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#DDDDDD" Margin="5">
            <TextBlock Text="Lat:" Margin="5"/>
            <TextBox Name="txtLat" Width="100" Margin="5" IsReadOnly="True"/>
            <TextBlock Text="Lon:" Margin="5"/>
            <TextBox Name="txtLon" Width="100" Margin="5" IsReadOnly="True"/>
            <TextBlock Text="Elevation (m):" Margin="0,10,0,0" FontWeight="Bold"/>
            <TextBox Name="txtElev" IsReadOnly="True" />

        </StackPanel>

        <wv2:WebView2 Name="webView" Grid.Row="1"/>



    </Grid>
</Window>
